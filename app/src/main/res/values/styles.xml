<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="redondo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="no_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="outline_white" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="outline_red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="cornerRadius">0dp</item>
</style>

    <style name="search_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/textConoceCiudad</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:inputType">text</item>
    </style>

    <style parent="Widget.MaterialComponents.Button.OutlinedButton" name="buttonInicial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>