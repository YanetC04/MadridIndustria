<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- THEMES -->
    <style name="Theme.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/eire_black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/eire_black</item>
        <item name="android:statusBarColor">@color/red</item>
    </style>

    <style name="Theme.MadridIndustria.NoActionBar.HeaderRed">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="Header.MadridIndustria.NoActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/white</item>
    </style>

    <attr name="primaryColor" format="reference|color" />
    <attr name="backColor" format="reference|color" />
    <style name="Box.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="primaryColor">@color/red</item>
        <item name="backColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- FLOATING BUTTON -->
    <style name="Theme.MadridIndustria.NoActionBar.FloatingButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/red</item>
    </style>

    <!-- IMAGES -->
    <style name="Image.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:tint">@color/red</item>
    </style>

    <!-- BUTTONS -->
    <style name="button_white_black" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_white_red" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_transparent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  TRANSPARENCIA CARTA -->
    <style name="ViewCard">
        <!-- Color de fondo de la Toolbar -->
        <item name="android:background">@color/red_trans</item>
    </style>

    <!--  BOTTOM NAVBAR -->
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/red</item>
        <item name="android:layout_height">60dp</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>
</resources>