<resources>
    <!-- THEMES -->
    <style name="Theme.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/eire_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/reddark</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/reddark</item>
        <!-- QUITAR PRIMER SPLASH AUTOMATIZADO -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/reddark</item>
    </style>

    <style name="Theme.MadridIndustria.NoActionBar.HeaderRed" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/reddark</item>
    </style>

    <style name="CollapsingToolbarLayout.MadridIndustria.NoActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/reddark</item>
    </style>

    <attr name="primaryColor" format="reference|color" />
    <attr name="backColor" format="reference|color" />
    <style name="Box.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="primaryColor">@color/white</item>
        <item name="backColor">@color/eire_black</item>
        <item name="android:textColor">@color/reddark</item>
    </style>

    <!-- FLOATING BUTTON -->
    <style name="Theme.MadridIndustria.NoActionBar.FloatingButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/reddark</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Theme.MadridIndustria.NoActionBar.FloatingButtonInverse" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/reddark</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/reddark</item>
    </style>

    <!-- IMAGES -->
    <style name="Image.MadridIndustria.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:tint">@color/white</item>
    </style>

    <!--  BUTTONS -->
    <style name="button_white_black" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/reddark</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_white_red" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/reddark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_mix" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/reddark</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_mix2" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/reddark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  TRANSPARENCIA CARTA -->
    <style name="ViewCard">
        <item name="android:background">@color/reddark_trans</item>
    </style>

    <!--  BOTTOM NAVBAR -->
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/reddark</item>
        <item name="android:layout_height">60dp</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>
</resources>