<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbarCollapse"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                style="@style/CollapsingToolbarLayout.MadridIndustria.NoActionBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/contenido"
                    android:scaleType="centerCrop" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/nombre"
                        style="@style/textContent"
                        android:layout_height="50dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:hint="Introduce el nombre del patrimonio"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:text="Inaguración: " />

                    <EditText
                        android:id="@+id/inaguracion"
                        android:layout_width="match_parent"
                        android:hint="Introduce el año de inaguracion"
                        style="@style/textContent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:text="Patrimonio: " />

                    <EditText
                        android:id="@+id/patrimonio"
                        android:layout_width="match_parent"
                        android:hint="Introduce la categoría"
                        style="@style/textContent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        style="@style/textTitle"
                        android:text="Coordenadas: " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <EditText
                        android:id="@+id/coordenadas_lat"
                        android:layout_width="match_parent"
                        android:hint="Introduce la latitud"
                        style="@style/textContent"/>
                    <EditText
                        android:id="@+id/coordenadas_lon"
                        android:layout_width="match_parent"
                        android:hint="Introduce la longitud"
                        style="@style/textContent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:text="Metro: " />

                    <EditText
                        android:id="@+id/metro"
                        android:layout_width="match_parent"
                        android:hint="Introduce las líneas de metro cercana"
                        style="@style/textContent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:text="Distrito: " />

                    <Spinner
                        android:id="@+id/distrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:text="Dirección: " />

                    <EditText
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:hint="Introduce la dirección"
                        style="@style/textContent"/>
                </LinearLayout>



                <TextView
                    android:layout_marginTop="5dp"
                    style="@style/textTitle"
                    android:text="@string/descripcion" />

                <EditText
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    style="@style/textContent"
                    android:hint="Introduce la descripción del patrimonio. Minimo 200 caracteres."
                    android:justificationMode="inter_word"/>
                <Button
                    android:id="@+id/enviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/button_red"
                    android:text="ENVIAR" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_menu"
        style="@style/MyBottomNavigationView"/>
</androidx.constraintlayout.widget.ConstraintLayout>