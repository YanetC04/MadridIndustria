<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bienvenida"
                android:layout_width="195dp"
                android:layout_height="76dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/bienvenida"
                android:textColor="@color/red"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="119dp"
                android:layout_height="76dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/industrylogored" />
        </LinearLayout>

        <TextView
            android:id="@+id/ini"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="@string/iniciarMinus"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@color/black"
            />

        <Button
            android:id="@+id/inicio"
            style="@style/buttonoutline"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/roboto"
            android:text="@string/iniciarSesion"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            android:text="@string/o"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/apple"
            style="@style/buttonoutline"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/apple"
            android:fontFamily="@font/roboto"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="5.8"
            android:text="@string/apple"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/facebook"
            style="@style/buttonoutline"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/facebook"
            android:fontFamily="@font/roboto"
            android:text="@string/facebook"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gmail"
            style="@style/buttonoutline"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/gmail"
            android:fontFamily="@font/roboto"
            android:text="@string/gmail"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/saludo"
            android:layout_marginTop="100dp"
            android:textSize="18sp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contraseÃ±a"
            android:inputType="textPassword"

            />

        <Button
            android:id="@+id/inicio2"
            style="@style/buttonoutline"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/roboto"
            android:text="@string/iniciarSesion"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/olvidado"
            style="@style/buttonoutline"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:onClick="openPassword"
            android:fontFamily="@font/roboto"
            android:text="@string/olvidaste"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>